<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/icon_button_tb_margin"
    android:paddingBottom="@dimen/icon_button_tb_margin"
    android:paddingStart="@dimen/icon_button_se_margin"
    android:paddingEnd="@dimen/icon_button_se_margin"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/icon_button_image_size"
        android:layout_height="@dimen/icon_button_image_size"
        app:tint="@color/selector_button"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/icon_button_text_size"
        android:textColor="@color/selector_button"/>
</LinearLayout>